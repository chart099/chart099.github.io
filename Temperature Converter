//Convert the temperature from Kelvin into Celsius, Farenheit, and Newton

//forecast today is 293K//

const kelvin = 0;

//Celsius= Kelvin-273//
const celsius= kelvin-273;

//Fahrenheit converted from celsius//
let fahrenheit = celsius*(9/5)+32;
//convert fahrenheit to whole number//
fahrenheit = Math.floor(fahrenheit);
console.log('The temperature is '+ fahrenheit +' degrees Fahrenheit')

//Newton converted from Celsius
let newton = celsius*(33/100)
newton= Math.floor(newton)
console.log('The tempurature is '+newton+' degrees Newton')
